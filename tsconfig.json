
{
  "compilerOptions": {
    "esModuleInterop": true,
    "types" : [ "node", "jest" ],
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es6",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "references":  [
    { "path": "../credentials" }
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}

